{% extends 'layout.html.twig' %}
{% block navbar %}
    {% include '/Home/navbar.html.twig' %}
{% endblock %}
{% block content %}
    <section>
        <div class="adminroom-index">
            <h2 class="m-5">Gestion des logements</h2>
            <div class="d-flex justify-content-around ">

                <a role="button" class="btn btn-outline-primary btn-lg" href="/AdminRoom/addRoom">Ajouter un logement</a>

                <a role="button" class="btn btn-outline-primary btn-lg" href="/Admin/index">Retour</a>

                <a role="button" class="btn btn-outline-primary btn-lg" href="/AdminRoom/addAddress">Ajouter une adresse</a>

            </div>

            {% for addressName,rooms in roomByAddresses %}
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col" colspan="3">{{ addressName }}</th>
                </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                        <tr>
                            <td>{{ room.type }}</td>
                            <td>
                                <a class="btn btn-outline-primary" href="">Mettre à jour</a>
                            </td>
                            <td><form action="/AdminRoom/deleteRoom" method="post">
                                    <input type="hidden" value="{{ room.id }}" name="id">
                                    <button class="btn btn-outline-primary" onclick="return confirm('Êtes-vous sûr(e) de vouloir supprimer ce logement ?')">Supprimer ce logement</button>
                                </form>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
                {% endfor %}
            </table>
            <table class="table table-bordered mt-5">
                <thead>
                <tr>
                    <th scope="col" colspan="3">Adresses disponibles</th>
                </tr>
                </thead>
                <tbody>
                {% for address in addresses %}
                    <tr>
                        <td>{{ address.address }}</td>
                        <td><form action="" method="post">
                                <input type="hidden" value="{{ address.id }}" name="id">
                                <button class="btn btn-outline-primary">Mettre à jour</button>
                            </form>
                        </td>
                        <td><form action="/AdminAddress/deleteAddress" method="post">
                                <input type="hidden" value="{{ address.id }}" name="id">
                                <button class="btn btn-outline-primary" onclick="return confirm('Êtes-vous sûr(e) de vouloir supprimer cette adresse ?')">Supprimer ce logement</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
{% block footer %}
    {% include '/Home/footer.html.twig' %}
{% endblock %}
