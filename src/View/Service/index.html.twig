{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/service.css">
{% endblock %}

{% block navbar %}
    {% include '/Home/navbar.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container-fluid container-service text-lg-left text-center">
        <h2 class="service-title pl-lg-3">Nos services</h2>
        <div class="row justify-content-center">
            {% for service in services %}
            <div class="col-md-6 card-deck">
                <div class="card service-card">
                    <img src="/assets/images/{{ service.image }}" class="card-img-top" alt="{{ service.name }}">
                    <div class="card-body card-description">
                        <h3 class="card-title">{{ service.name }}</h3>
                        <p class="card-text">{{ service.description }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <br/>

    <div class="container-fluid container-animation text-lg-left text-center">
        <h2 class="animation-title">Nos animations</h2>
        <div class="justify-content-center d-lg-flex d-sm-block">
    {% for animation in animations %}
        {% if loop.first %}
        <div class="row no-gutters justify-content-center col-lg-6 p-sm-0">
                <div class="card-deck main-card">
                    <div class="card">
                        <img src="/uploads/images/{{ animation.image }}" class="card-img-top" alt="{{ animation.name }}">
                        <div class="card-body card-description">
                            <h3 class="card-title">{{ animation.name }}</h3>
                            <p class="card-text">{{ animation.description }}</p>
                        </div>
                    </div>
                </div>
        </div>
            <div class="d-flex flex-column pl-3 pr-3">
            {% else %}
                <div class="card animation-card">
                    <div class="row no-gutters">
                        <div class="col-md-6">
                            <img src="/uploads/images/{{ animation.image }}" class="card-img-top h-100" alt="{{ animation.name }}">
                        </div>
                        <div class="col-md-6 col-xs-1">
                            <div class="card-body card-description">
                                <h3 class="card-title">{{ animation.name }}</h3>
                                <p class="card-text">{{ animation.description }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}